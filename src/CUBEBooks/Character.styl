@require '../colors'

char-bg = color-0
char-fg = color-3
char-bdr = color-8

@require 'Popup'

.character
  position relative
  display inline-block
  margin-right 0.1rem
  height 8rem
  &:last-child
    margin-right 0
  &:before
    content ''
    height 100%
    display inline-block
    vertical-align middle
  .char
    padding 0.6rem
    background char-bg
    color char-fg
    border 0.1rem solid char-bdr
    border-radius 0.5rem
    font-size 2rem
    font-weight bold
    display inline-block
    vertical-align middle
