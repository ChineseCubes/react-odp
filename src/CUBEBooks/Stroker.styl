strokes-grid = #e0e0e0
strokes-bg = white
strokes-bdr = #e05656

.strokes
  z-index 2
  background strokes-bg
  position absolute
  top    0
  left   0
  bottom 0
  right  0
  margin auto
  width  215px
  height 215px
  padding 1rem
  border 4px solid strokes-bdr
  border-radius 1.5rem
  .grid
    position absolute
    top    1rem
    left   1rem
    bottom 1rem
    right  1rem
    border 1px solid strokes-grid
    border-radius 1rem
    &:before, &:after
      content ''
      position absolute
      top    0
      left   0
      bottom 0
      right  0
      margin auto
      border 1px dashed strokes-grid
    &:before
      height 33.33%
      border-left-width 0
      border-right-width 0
    &:after
      width 33.33%
      border-top-width 0
      border-bottom-width 0
  canvas
    position absolute
    left 1rem
    top  1rem
  .fallback
    background-size cover
    width  215px
    height 215px
