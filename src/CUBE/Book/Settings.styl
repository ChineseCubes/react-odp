@require '../../colors'

.settings
  position absolute
  overflow hidden
  left  0
  top   1px
  right 0
  background-color white
  text-align right
  &:before
    display inline-block
    content ''
    vertical-align middle
    height 100%
  > .item
    display inline-block
    cursor pointer
    vertical-align middle
    padding 0 12px
    border-left 1px solid color-9
    color color-2
