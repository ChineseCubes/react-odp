  #deck
    width 100%
    padding 1rem
    text-align center
    position relative
    .word
      .characters
        cursor pointer
      .actions
        display none
        position absolute
        top -3.5rem
        left 50%
        .menu
          background-color #666
          border-radius 0.3rem
          &.single
            width 6rem
            margin-left -3rem
          &.multiple
            width 9rem
            margin-left -4.5rem
          &:before
            position absolute
            left -0.4rem
            bottom -0.5rem
            content ""
            width  1rem
            height 1rem
            background-color #666
            transform rotate(45deg)
          .buttons
            position relative
            z-index 3

  .entry
    position absolute
    left   0
    right  0
    top    100%
    padding 1rem
    background-color #fff
    border-bottom-left-radius  5px
    border-bottom-right-radius 5px
    font-size 1rem
    text-align left
    //.title
    //  font-weight bold
    .definition
      line-height 1.5em
      margin-left 1em
    .word-class
      margin-left 0.5em
    /*
