@import 'nib'

transform(v)
  -moz-transform v
  -o-transform v
  -ms-transform v
  -webkit-transform v
  transform v

#control
  font-family "Noto Sans", "Noto Sans T Chinese", "Noto Sans S Chinese", "微軟正黑體", sans-serif
  .header
    .settings.icon
      float right
      cursor pointer
  .content
    padding 0
    border-bottom-left-radius  5px
    border-bottom-right-radius 5px
  .playground
    font-size 120%
    text-align center
    .navbar
      position absolute
      overflow hidden
      left  0
      top   1px
      right 0
      .menu
        border-radius 0
    .entry
      position relative
      background white
      border-bottom-left-radius  5px
      border-bottom-right-radius 5px
      min-height 2rem
      padding 1rem
      padding-right 6rem
      font-size 1rem
      text-align left
      .definition
        line-height 2rem
        margin-left 1rem
      .word-class
        margin-left 0.5rem
      .display-mode
        position absolute
        right 0
        top 0
        bottom 0
        .aligner
          vertical-align middle
          display inline-block
          height 100%
        .button
          vertical-align middle
          box-shadow none
          padding 0.5rem
          margin-right 0.5rem
    .comp
      &.sentence
        position relative
        margin-bottom 0.9rem // match the height of meaning
        padding 4rem 1rem
      &.redo-cut
        position absolute
        top 1rem
        right 2rem
        //margin auto
        text-align center
        padding-left 0
        padding-right 0
        i
          margin 0
      &.word
        position relative
        cursor pointer
        display inline-block
        vertical-align middle
        margin-right 1rem
        &:last-child
          margin-right 0
        .meaning
          position absolute
          left 0
          right 0
          margin-top  0.2rem
          font-size   0.9rem
          line-height 1rem
          min-height  1.5rem
          text-align center
          color rgba(#000,1)
        .actions
          //display none
          position absolute
          top -3rem
          left 50%
          text-align center
          padding 0
          .menu
            position relative
            z-index 3
            border-radius 0.3rem
            .button
              border none
              box-shadow none
            &.single
              width 3rem
              margin-left -1.5rem
            &.multiple
              width 6rem
              margin-left -3rem
            &:before
              position absolute
              margin-left -0.5rem
              left 50%
              top 99% // for the strange rounding in Chrome
              content ""
              width  0
              height 0
              border-style solid
              border-width 0.5rem 0.5rem 0 0.5rem
              border-color #5c6166 transparent transparent transparent
            //.buttons
            //  position relative
            i.cut.icon
              transform rotate(90deg)
      &.characters
        display inline-block
        position relative
        cursor pointer
      &.character
        display inline-block
        .char
          text-align center
          display inline-block
          position relative
          padding 0.5rem
          font-size 1.5rem
          font-weight bold
          background-color #FF5453
          color #FFF
          border-radius 0.5rem
        .pronounciation
          margin 0
          padding 0
          font-weight normal
          font-size   0.75rem
          line-height 1rem
          min-height  1rem
          font-family "American Typewriter", monospace
          text-align center
          color rgba(#000, 0.5)

  #deck
    width 100%
    padding 1rem
    text-align center
    position relative
    .word
      .characters
        cursor pointer


  #subject
    font-size 1.2rem
    line-height 1.5em
    font-weight bold
    text-align center
    padding 1rem
    background-color #FF5453
    color #FFF

  #actions
    .congratulations
      display inline-block
      padding 1rem
      background-color #fff
      font-weight bold
      font-size 1.2rem
      border-radius 0.5rem
      box-shadow rgba(#000, 1) 0 0 1px
      .button
        margin 0 0.1rem
