html, body, #wrap
  width  100%
  height 100%

#wrap
  position relative
  background #16161D

.presentation
    position absolute
    left   0
    top    0
    right  0
    bottom 0
    margin auto
  .draw
    position absolute
    &.page
      background white
    //&.frame
    //  background transparent
    &.image
      background-size cover
      width  100% !important
      height 100% !important
      content ''
    &.text-box
      width  100% !important
      height 100% !important
    &.p, &.span
      position static
    &.p
      display table
      width  100% !important
      height 100% !important
    &.span
      text-align center
      display table-cell
      vertical-align bottom
