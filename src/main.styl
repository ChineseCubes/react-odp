@import 'nib'
global-reset()

@font-face
  font-family 'cwTeX Q KaiZH'
  src url("../fonts/cwTeX-Q-KaiZH-subset.ttf")

@font-face
  font-family 'Noto Sans S Chinese Medium'
  src local('Noto Sans CJK SC Medium'),
      local('NotoSansCJKsc-Medium'),
      url('../fonts/NotoSansCJKsc-Medium-subset.otf') format('opentype')

